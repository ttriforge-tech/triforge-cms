{
  "name": "triforge-backend",
  "version": "1.0.0",
  "description": "Backend Express + Prisma + PostgreSQL untuk Triforge (Projects, Auth, Contact)",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "db:migrate": "prisma migrate dev --name init_triforge",
    "db:generate": "prisma generate",
    "db:seed": "node prisma/seed.js",
    "postinstall": "npx prisma generate",
    "build": "npx prisma migrate deploy && npx prisma generate",
    "vercel-build": "npx prisma migrate deploy && npx prisma generate"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@prisma/adapter-neon": "^7.0.1",
    "@prisma/client": "^5.20.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "neon-serverless": "^0.5.3",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "prisma": "^5.20.0"
  }
}
